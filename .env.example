# Copy this file to .env and fill in your values
# NEVER commit your .env file to version control

# The port your server will listen on
PORT=3000

# A long, random secret string used to sign JWT tokens.
# You can generate one with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_key_change_this_in_production

# How long a JWT token stays valid before expiring (e.g. 1h, 7d, 30m)
JWT_EXPIRES_IN=7d

# Path where the SQLite database file will be created
DB_PATH=./data/tasks.db
